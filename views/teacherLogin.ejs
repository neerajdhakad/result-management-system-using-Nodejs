<!-- include header -->
<%-include('partials/_header') %>
<!-- /include header -->

<div class="container">
    <div class="row">
      <div class="col-md-12 my-3">
        <div class="d-flex justify-content-between mb-3">
          <a href="/" style="color: blue;"><i class="fas fa-angle-double-left"></i> Back</a>
        </div>
      </div>
      <h2 class="text-center">Teacher Login</h2>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
            />
            
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="pass"
              name="pass"
              formControlName="pass"
            />
          </div>
          <div class="d-flex justify-content-between">
            <button
              type="submit"
              class="btn btn-next"
            >
              Sign in
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

<!-- include footer -->
<%-include('partials/_footer') %>
<!-- /include footer -->